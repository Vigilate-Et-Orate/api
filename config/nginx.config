server {
    listen 80;
    server_name api.domain.com;
    location / {
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8080;
        proxy_redirect off;
    }
}

server {
    listen 80;
    server_name docs.domain.com;
    location / {
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8084;
        proxy_redirect off;
    }
}

server {
    listen 80;
    server_name grafana.domain.com;
    location / {
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8083;
        proxy_redirect off;
    }
}